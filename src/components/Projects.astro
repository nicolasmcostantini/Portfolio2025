---
import Card from '../components/Card.astro';
import ImagenSistema from '../assets/sistema.png';
import { getCollection } from 'astro:content';    

const proyectos = await getCollection('proyectos');

---

<h2 class="text-4xl font-bold mb-6 text-center">Proyectos</h2>
<section class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 p-6" id="projects">
   {proyectos.map(proyecto => (
      <Card 
         titulo={proyecto.data.titulo} 
         descripcion={proyecto.data.descripcion} 
         imagen={ImagenSistema} 
         tecnologias={proyecto.data.tecnologias} 
         slug={proyecto.slug}
      />
  ))}
</section>
