---
import { Image } from "astro:assets";
import vonzuLogo from "../../assets/vonzu_logo.jpg";
import MetadatosProyecto from "./MetadatosProyecto.astro";

interface Props {
  titulo: string;
  descripcion: string;
  tecnologias: string[];
  slug: string;
  portada: string;
  repositorio?: string;
  demo?: string;
  fecha?: string;
  estado?: string;
}

const {
  titulo,
  descripcion,
  slug,
  portada,
  repositorio,
  demo,
  fecha,
  estado,
} = Astro.props;

// Mapeo de imágenes de portada
const portadaImages: Record<string, typeof vonzuLogo> = {
  'vonzu_logo.jpg': vonzuLogo,
};
---

<section
  class="relative flex justify-center py-20 "
>
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 opacity-20">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-orange-300 rounded-full mix-blend-multiply filter blur-3xl animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-yellow-300 rounded-full mix-blend-multiply filter blur-3xl animate-pulse animation-delay-2000"
    >
    </div>
  </div>

  <!-- Gradientes de difuminado en los bordes -->

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Columna de imagen -->
      <div class="order-2 lg:order-1">
        <div class="relative group">
          <!-- Contenedor de imagen con efectos -->
          <div
            class="relative rounded-2xl overflow-hidden shadow-2xl group-hover:shadow-3xl transition-all duration-500 group-hover:scale-105"
          >
            {
              portadaImages[portada] ? (
                <Image
                  src={portadaImages[portada]}
                  alt={`Imagen del proyecto ${titulo}`}
                  class="w-full h-80 lg:h-96 object-cover object-center"
                  loading="eager"
                />
              ) : (
                <div class="w-full h-80 lg:h-96 bg-gray-200 dark:bg-gray-700 flex items-center justify-center rounded-2xl">
                  <span class="text-gray-500 dark:text-gray-400">Imagen no disponible</span>
                </div>
              )
            }
            <!-- Overlay con botones de acción -->
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center p-6"
            >
            </div>
          </div>
          <!-- Badge de estado -->
          <div
            class="absolute -top-4 -right-4 px-3 py-1 bg-green-500 text-white text-sm font-semibold rounded-full shadow-lg"
          >
            {estado}
          </div>
        </div>
      </div>

      <!-- Columna de contenido -->
      <div class="order-1 lg:order-2 space-y-8">
        <!-- Breadcrumb -->
        <nav
          class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400"
        >
          <a
            href="/"
            class="hover:text-orange-600 dark:hover:text-orange-400 transition-colors"
            >Inicio</a
          >
          <span>/</span>
          <a
            href="/#projects"
            class="hover:text-orange-600 dark:hover:text-orange-400 transition-colors"
            >Proyectos</a
          >
          <span>/</span>
          <span class="text-orange-600 dark:text-orange-400">{titulo}</span>
        </nav>

        <!-- Título principal -->
        <h1
          class="text-4xl lg:text-6xl font-bold leading-tight bg-gradient-to-r from-gray-900 via-orange-600 to-gray-900 dark:from-white dark:via-orange-400 dark:to-white bg-clip-text text-transparent"
          transition:name={`titulo-${slug}`}
        >
          {titulo}
        </h1>
        <MetadatosProyecto
          fecha={fecha}
          estado={estado}
          repositorio={repositorio}
          demo={demo}
        />
      </div>
    </div>
  </div>
</section>
