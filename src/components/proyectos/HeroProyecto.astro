---
import { Image } from "astro:assets";
import vonzuLogo from "../../assets/vonzu_logo.jpg";

interface Props {
  titulo: string;
  descripcion: string;
  tecnologias: string[];
  slug: string;
  portada: string;
  repositorio?: string;
  demo?: string;
  fecha?: string;
  estado?: string;
}

const {
  titulo,
  descripcion,
  slug,
  portada,
  repositorio,
  demo,
  fecha = "2025",
  estado = "Completado",
} = Astro.props;

// Mapeo de imágenes de portada
const portadaImages: Record<string, typeof vonzuLogo> = {
  'vonzu_logo.jpg': vonzuLogo,
};
---

<section
  class="relative min-h-screen flex justify-center py-20 overflow-hidden"
>
  <!-- Elementos decorativos de fondo -->
  <div class="absolute inset-0 opacity-20">
    <div
      class="absolute top-1/4 left-1/4 w-96 h-96 bg-orange-300 rounded-full mix-blend-multiply filter blur-3xl animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-yellow-300 rounded-full mix-blend-multiply filter blur-3xl animate-pulse animation-delay-2000"
    >
    </div>
  </div>

  <!-- Gradientes de difuminado en los bordes -->

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20 items-center">
      <!-- Columna de imagen -->
      <div class="order-2 lg:order-1">
        <div class="relative group">
          <!-- Contenedor de imagen con efectos -->
          <div
            class="relative rounded-2xl overflow-hidden shadow-2xl group-hover:shadow-3xl transition-all duration-500 group-hover:scale-105"
          >
            {
              portadaImages[portada] ? (
                <Image
                  src={portadaImages[portada]}
                  alt={`Imagen del proyecto ${titulo}`}
                  class="w-full h-80 lg:h-96 object-cover object-center"
                  loading="eager"
                />
              ) : (
                <div class="w-full h-80 lg:h-96 bg-gray-200 dark:bg-gray-700 flex items-center justify-center rounded-2xl">
                  <span class="text-gray-500 dark:text-gray-400">Imagen no disponible</span>
                </div>
              )
            }
            <!-- Overlay con botones de acción -->
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center p-6"
            >
            </div>
          </div>
          <!-- Badge de estado -->
          <div
            class="absolute -top-4 -right-4 px-3 py-1 bg-green-500 text-white text-sm font-semibold rounded-full shadow-lg"
          >
            {estado}
          </div>
        </div>
      </div>

      <!-- Columna de contenido -->
      <div class="order-1 lg:order-2 space-y-8">
        <!-- Breadcrumb -->
        <nav
          class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-400"
        >
          <a
            href="/"
            class="hover:text-orange-600 dark:hover:text-orange-400 transition-colors"
            >Inicio</a
          >
          <span>/</span>
          <a
            href="/#projects"
            class="hover:text-orange-600 dark:hover:text-orange-400 transition-colors"
            >Proyectos</a
          >
          <span>/</span>
          <span class="text-orange-600 dark:text-orange-400">{titulo}</span>
        </nav>

        <!-- Título principal -->
        <h1
          class="text-4xl lg:text-6xl font-bold leading-tight bg-gradient-to-r from-gray-900 via-orange-600 to-gray-900 dark:from-white dark:via-orange-400 dark:to-white bg-clip-text text-transparent"
          transition:name={`titulo-${slug}`}
        >
          {titulo}
        </h1>

        <!-- Metadatos del proyecto -->
        <div class="flex flex-wrap gap-4 text-sm">
          <div
            class="flex items-center space-x-2 px-3 py-1 bg-gray-100 dark:bg-gray-800 rounded-full"
          >
            <svg
              class="w-4 h-4 text-orange-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-6 0h6m-6 0V7a1 1 0 00-1 1v9a1 1 0 001 1h8a1 1 0 001-1V8a1 1 0 00-1-1h-2"
              ></path>
            </svg>
            <span class="text-gray-700 dark:text-gray-300">{fecha}</span>
          </div>
          <div
            class="flex items-center space-x-2 px-3 py-1 bg-gray-100 dark:bg-gray-800 rounded-full"
          >
            <svg
              class="w-4 h-4 text-green-500"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-gray-700 dark:text-gray-300">{estado}</span>
          </div>
        </div>

        <!-- Descripción -->
        <p
          class="text-lg lg:text-xl text-gray-600 dark:text-gray-300 leading-relaxed"
          transition:name={`des-${slug}`}
        >
          {descripcion}
        </p>

        <!-- Botones de acción principales -->
        <div class="flex flex-col sm:flex-row gap-4">
          {
            demo && (
              <a
                href={demo}
                target="_blank"
                rel="noopener noreferrer"
                class="group inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-semibold rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-xl"
              >
                <svg
                  class="w-5 h-5 mr-2 group-hover:animate-pulse"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                  />
                </svg>
                Ver Demo en Vivo
              </a>
            )
          }

          {
            repositorio && (
              <a
                href={repositorio}
                target="_blank"
                rel="noopener noreferrer"
                class="group inline-flex items-center justify-center px-8 py-4 bg-white dark:bg-gray-800 text-gray-900 dark:text-white font-semibold rounded-2xl border-2 border-gray-200 dark:border-gray-700 hover:border-orange-500 dark:hover:border-orange-400 transition-all duration-300 hover:scale-105 hover:shadow-lg"
              >
                <svg
                  class="w-5 h-5 mr-2 group-hover:animate-bounce"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                </svg>
                Ver Código Fuente
              </a>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>
