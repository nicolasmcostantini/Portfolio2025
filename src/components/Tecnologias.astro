---
const { tecnologias, slug, clasesImg } = Astro.props;

//Funcion para obtener la ruta de los iconos
const getIconPath = (name: string) => `/assets/icons/${name}.svg`;
---

{
    tecnologias.map((tecnologia: string) => (
        <img
            src={getIconPath(tecnologia)}
            alt={tecnologia}
            class={clasesImg}
            title={tecnologia}
            loading="lazy"
            role="img"
            aria-label={tecnologia}
            transition:name={`icon-${tecnologia}-${slug}`}
        />
    ))
}
